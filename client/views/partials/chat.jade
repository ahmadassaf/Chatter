.container
  ul.usersList
    li.clearfix(data-ng-repeat='user in users')
      div.circular
        img.img-circle(ng-src='{{user.username | badge}}', alt='User Avatar')
  .messagesList
    ul.chat(id="chatBox")
      li.clearfix(ng-class="message.sender | orient:(true)", data-ng-repeat='message in messages')
        include message
  .messageBox
    form(data-ng-submit="sendMessage()", name="chatForm", role="form")
      input#messageBox(type='text', placeholder='Type your message here...' data-ng-model="message")
      button#btn-chat.btn.btn-warning.btn-sm(type="submit")
        | Send

