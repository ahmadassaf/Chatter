h1 User Register


.alert.alert-danger(ng-show="showError" || false)
        H3 {{err}}
form.form-horizontal(ng-submit="register()", name="registerForm", role="form")
    .form-group
        label.control-label.col-sm-2(for="username") Username
        .col-sm-10
            input.form-control(type="text", data-ng-model="username", placeholder="Username", name="username", required, data-ng-minlength="1", data-ng-maxlength="20", autofocus)

    .form-group
        label.control-label.col-sm-2(for="email") Email
        .col-sm-10
            input.form-control(type="email", data-ng-model="email", placeholder="Email", name="email", required)

    .form-group
        label.control-label.col-sm-2(for="firstname") First Name
        .col-sm-10
            input.form-control(type="text", data-ng-model="firstname", placeholder="First name", name="firstname", required, data-ng-minlength="1", data-ng-maxlength="20")
    .form-group
        label.control-label.col-sm-2(for="lastname") Last Name
        .col-sm-10
            input.form-control(type="text", data-ng-model="lastname", placeholder="Last name", name="lastname", required, data-ng-minlength="1", data-ng-maxlength="20")
    .form-group
        label.control-label.col-sm-2(for="password") Password
        .col-sm-10
            input.form-control(type="password", data-ng-model="password", placeholder="Password", name="password", required, data-ng-minlength="5", data-ng-maxlength="60")

    .form-group
        label.control-label.col-sm-2 Gender
        .radio.radio-inline
            label
                input(type="radio", ng-model="gender", value="Female",checked=false,required, name="gender")
                | Female
        .radio.radio-inline
            label
                input(type="radio", ng-model="gender", value="Male",checked=false,required, name="gender")
                | Male

    .form-group
        .controls
            button.btn(type="submit", data-ng-disabled="registerForm.$invalid") Submit

    .alert.alert-danger(ng-show="registerForm.$invalid && registerForm.$dirty")
        strong Please correct the following errors:
        ul
            li(ng-show="registerForm.username.$error.required") Username is required
            li(ng-show="registerForm.username.$error.minlength") Username has to be at least 1 character long
            li(ng-show="registerForm.username.$error.maxlength") Username has to be at most 20 character long

            li(ng-show="registerForm.email.$error.required") Email is required
            li(ng-show="registerForm.email.$error.email") Email is invalid

            li(ng-show="registerForm.firstname.$error.required") First name is required
            li(ng-show="registerForm.firstname.$error.minlength") First name has to be at least 1 character long
            li(ng-show="registerForm.firstname.$error.maxlength") First name has to be at most 20 character long

            li(ng-show="registerForm.lastname.$error.required") Last name is required
            li(ng-show="registerForm.lastname.$error.minlength") Last name has to be at least 1 character long
            li(ng-show="registerForm.lastname.$error.maxlength") Last name has to be at most 20 character long


            li(ng-show="registerForm.password.$error.required") Password is required
            li(ng-show="registerForm.password.$error.minlength") Password must be at least 5 characters long
            li(ng-show="registerForm.password.$error.maxlength") Password must be at most 60 characters long
            li(ng-show="registerForm.selectedDay.$error.required || registerForm.selectetMonth.$error.required || registerForm.selectedYear.$error.required") Birthday is required

            li(ng-show="registerForm.gender.$error.required") Gender is required

